<launch>
  <!-- arguments -->
  <arg name="web3_http_provider" default="http://localhost:8545" />
  <arg name="ipfs_http_provider" default="http://127.0.0.1:5001" />
  <arg name="builder_contract_address" default="0x9778aa32D264Cd6b9fb0883eC7cd03cF48886E21" />

  <!-- market group -->
  <group ns="matcher">
    <include file="$(find robonomics_market)/launch/market.launch">
      <arg name="enable_signer" value="false" />
      <arg name="enable_generator" value="false" />
      <arg name="web3_http_provider" value="$(arg web3_http_provider)" />
      <arg name="ipfs_http_provider" value="$(arg ipfs_http_provider)" />
    </include>

    <node pkg="robonomics_market" type="matcher_node" name="matcher" output="screen">
      <param name="web3_http_provider" value="$(arg web3_http_provider)" />
      <param name="builder_contract_abi" textfile="$(find robonomics_market)/abi/builder.json" />
      <param name="builder_contract_address" value="$(arg builder_contract_address)" />
    </node>
  </group>
</launch>
